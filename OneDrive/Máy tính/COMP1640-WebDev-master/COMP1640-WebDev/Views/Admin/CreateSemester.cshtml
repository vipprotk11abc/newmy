@model AcademicYear
@{
    Layout = "./Layout/_AdminLayout";
}


<div class="px-4 mt-4 min-vh-100">
    <h1>Create Faculty</h1>

    <form asp-action="CreateSemester" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group mb-2">
            <label asp-for="Id" class="control-label">Semester ID</label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="StartDate" class="control-label">Start Date</label>
            <input id="StartDate" asp-for="StartDate" class="form-control" type="date" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="ClosureDate" class="control-label">Closure Date</label>
            <input id="ClosureDate" asp-for="ClosureDate" class="form-control" type="date" />
            <span asp-validation-for="ClosureDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="FinalDate" class="control-label">Final Date</label>
            <input id="FinalDate" asp-for="FinalDate" class="form-control" type="date" />
            <span asp-validation-for="FinalDate" class="text-danger"></span>
        </div>


        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

<script>
    function setCurrentDate(elementId) {
        var currentDate = new Date().toISOString().split('T')[0];
        document.getElementById(elementId).value = currentDate;
    }

    setCurrentDate('StartDate');
    setCurrentDate('ClosureDate');
    setCurrentDate('FinalDate');
</script>
