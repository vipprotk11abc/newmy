@using COMP1640_WebDev.ViewModels
@model AcademicYearViewModel

@{
    Layout = "./Layout/_AdminLayout";
}


<div class="px-4 mt-4 min-vh-100">
    <h1>Create Faculty</h1>

    <form asp-action="CreateSemester" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group mb-2">
            <label asp-for="AcademicYear.StartDate" class="control-label">Start Date</label>
            <input id="StartDate" asp-for="AcademicYear.StartDate" class="form-control" type="date" />
            <span asp-validation-for="AcademicYear.StartDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="AcademicYear.ClosureDate" class="control-label">Closure Date</label>
            <input id="ClosureDate" asp-for="AcademicYear.ClosureDate" class="form-control" type="date" />
            <span asp-validation-for="AcademicYear.ClosureDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="AcademicYear.FinalDate" class="control-label">Final Date</label>
            <input id="FinalDate" asp-for="AcademicYear.FinalDate" class="form-control" type="date" />
            <span asp-validation-for="AcademicYear.FinalDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label>Category</label>
            <select asp-for="AcademicYear.FacultyId"
                    asp-items="@(new SelectList(Model.Falculties, "Id", "FacultyName"))"
                    class="form-control">
            </select>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

<script>
    function setCurrentDate(elementId) {
        var currentDate = new Date().toISOString().split('T')[0];
        document.getElementById(elementId).value = currentDate;
    }

    setCurrentDate('StartDate');
    setCurrentDate('ClosureDate');
    setCurrentDate('FinalDate');
</script>
