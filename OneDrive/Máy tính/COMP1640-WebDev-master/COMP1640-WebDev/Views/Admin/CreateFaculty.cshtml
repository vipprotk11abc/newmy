@model Faculty
@{
    Layout = "./Layout/_AdminLayout";
}

<div class="px-4 mt-4 min-vh-100">
    <h1>Create Faculty</h1>

    <form asp-action="CreateFaculty" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group mb-2">
            <label asp-for="Id" class="control-label">ID</label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="FacultyName" class="control-label">Faculty Name</label>
            <input asp-for="FacultyName" class="form-control" />
            <span asp-validation-for="FacultyName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
