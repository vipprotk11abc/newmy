@{
    Layout = "./Layout/_MMLayout";
}

<style>
    .table-3d {
        border-collapse: separate;
        border-spacing: 0;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.19);
        transition: transform 0.3s ease;
    }

        .table-3d:hover {
            transform: rotateY(10deg);
        }

        .table-3d th,
        .table-3d td {
            border: 1px solid #dddddd;
            padding: 8px;
            background-color: #ffffff;
        }

        .table-3d th {
            background-color: #f2f2f2;
        }

    .scrollable-table {
        max-height: 500px;
        overflow-y: auto;
    }

</style>

<div class="px-4 mt-4 min-vh-100">
    <div class="mb-3">
        <h1 class="admin-heading">Magazines Management</h1>
    </div>


    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-primary" asp-controller="MarketingManager" asp-action="CreateMagazine"><i class="bi bi-plus-circle me-2"></i>Add new magazine</a>
    </div>

    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["AlertMessage"]
        </div>
    }

    <div class="table-responsive">
        <div class="scrollable-table">
            <table class="table table-3d table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Semeter</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                   
                </tbody>
            </table>
        </div>
    </div>


    <div class="modal fade" id="actionModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this faculty?</p>
                </div>
                <div class="modal-footer">
                    <a id="confirmDelete" class="btn btn-danger" href="#">Yes</a>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        document.querySelectorAll('.delete-faculty').forEach(item => {
            item.addEventListener('click', event => {
                const facultyId = event.currentTarget.dataset.facultyId;
                const confirmDelete = document.getElementById('confirmDelete');
                confirmDelete.href = '/Admin/DeleteFaculty?Id=' + facultyId;
            });
        });
    </script>
}