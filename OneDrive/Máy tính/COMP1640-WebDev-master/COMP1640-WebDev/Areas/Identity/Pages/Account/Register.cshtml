@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    .backgroundContainer {
        background-image: url("https://4kwallpapers.com/images/wallpapers/macos-big-sur-apple-layers-fluidic-colorful-wwdc-stock-4096x2304-1455.jpg");
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .card {
        max-width: 400px;
    }
</style>

<div class="backgroundContainer min-vh-100">
    <div class="container py-5">
        <div class="card shadow-lg mx-auto bg-dark text-light">
            <div class="card-body">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h4 class="card-title text-center mb-4 text-light-50">REGISTER</h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <hr class="border border-light border-2" />

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="name@example.com" type="email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">Create password</label>
                        <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" placeholder="password" type="password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label">Repeat password</label>
                        <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="password" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.FacultyId" class="form-label">Faculty</label>
                        <select asp-for="Input.FacultyId" asp-items="Model.FacultySelectList" class="form-control">
                            <option value="">-- Select Faculty --</option>
                        </select>
                        <span asp-validation-for="Input.FacultyId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Role" class="form-label">Role</label>
                        <select asp-for="Input.Role" class="form-control" asp-items="@Model.RoleSelectList.Where(r => r.Value != "Admin" && r.Value != "Guest")">
                            <option value="">-- Select Role --</option>
                        </select>
                        <span asp-validation-for="Input.Role" class="text-danger"></span>
                    </div>



                    <div class="mb-4">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-outline-secondary">
                            Register
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}