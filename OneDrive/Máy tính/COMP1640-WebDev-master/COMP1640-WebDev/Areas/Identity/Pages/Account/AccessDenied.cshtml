@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f0f0f0; /* Light gray background color */
    }

    .container {
        background-color: #ffffff; /* White background color */
        padding: 40px;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transform: translateZ(30px); /* Adding 3D effect */
    }

    .icon {
        color: #FF5722; /* Dark orange color */
        font-size: 60px;
        margin-bottom: 20px;
    }

    h1 {
        color: #FF5722; /* Dark orange color */
        font-size: 36px;
        margin-bottom: 20px;
    }

    p {
        color: #555555; /* Dark gray color */
        font-size: 18px;
        margin-bottom: 30px;
    }

    .btn {
        background-color: #2196F3; /* Blue color */
        color: white;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #0D47A1; /* Darker blue color */
        }
</style>

<div class="container">
    <i class="bi bi-file-lock icon"></i>
    <h1>Access Denied</h1>
    <p>You cannot access this page. Contact the administrator for permissions or access the home page to browse other pages.</p>
    <button class="btn" onclick="window.location.href='/';">Go To Home</button>
</div>

